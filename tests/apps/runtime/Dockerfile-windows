FROM golang:1.14-windowsservercore-1809 as servercore

WORKDIR /app
COPY app.go .
RUN go get -d -v
RUN go build -o app.exe .

FROM golang:1.14-nanoserver-1809
WORKDIR /app
COPY --from=servercore /app/app.exe /app/app.exe
CMD ["app.exe"]
